@model ProjectsManagment.Models.ApplicationUser

@{
    ViewBag.Title = "Подробности о пользователе";
}

<h2>@ViewBag.Title @Model.Surname @Model.Name @Model.Fathername</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model=>model.Surname)
        </dt>
        <dd>
            @Html.DisplayFor(model=>model.Surname)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Fathername)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Fathername)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Birthday)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Birthday)
        </dd>
    </dl>
</div>
<hr />
<h4>Роли этого пользователя</h4>
@if (ViewBag.RoleNames.Count == 0)
{
    
    <p>У данного пользователя нет ролей.</p>
}

<ul>
    @foreach (var item in ViewBag.RoleNames)
    {
        <li>@item</li>
    }
</ul>
<p>
    @if (Request.IsAuthenticated && (User.IsInRole("Главный инженер проекта") || User.IsInRole("Директор") || User.Identity.Name == Model.UserName))
    {
        @Html.ActionLink("Редактировать", "Edit", new { id = Model.Id }) <br/>
    }
    @Html.ActionLink("Назад", "Index")
</p>



